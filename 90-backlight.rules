# Allow video group to control backlight and leds
SUBSYSTEM=="backlight", ACTION=="add", \
  RUN+="/bin/chgrp video %p/brightness", \
  RUN+="/bin/chmod g+w %p/brightness"
SUBSYSTEM=="leds", ACTION=="add", DEVPATH=="/devices/platform/*/leds/*::kbd_backlight", \
  RUN+="/bin/chgrp video %p/brightness", \
  RUN+="/bin/chmod g+w %p/brightness"
